               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
            </StackPane>
            
            <StackPane fx:id="errorContainer" managed="false" styleClass="error-container" visible="false">
               <children>
                  <Label fx:id="errorLabel" styleClass="error-label" text="Error" />
               </children>
               <VBox.margin>
                   <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </StackPane>
            
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="d1" alignment="CENTER" prefHeight="60.0" prefWidth="50.0" style="-fx-font-size: 24px;" />
                  <TextField fx:id="d2" alignment="CENTER" prefHeight="60.0" prefWidth="50.0" style="-fx-font-size: 24px;" />
                  <TextField fx:id="d3" alignment="CENTER" prefHeight="60.0" prefWidth="50.0" style="-fx-font-size: 24px;" />
