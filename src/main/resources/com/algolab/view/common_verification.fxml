                  <TextField fx:id="d5" alignment="CENTER" prefHeight="60.0" prefWidth="50.0" style="-fx-font-size: 24px;" />
                  <TextField fx:id="d6" alignment="CENTER" prefHeight="60.0" prefWidth="50.0" style="-fx-font-size: 24px;" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#verifyCode" text="Submit">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
      
            <StackPane>
               <children>
                  <Button onAction="#cancel" style="-fx-background-color: transparent;" text="Cancel" textFill="#4A90E2" underline="true" />
               </children>
            </StackPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
