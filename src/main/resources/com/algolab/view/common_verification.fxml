<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0" styleClass="login-root" stylesheets="@../styles/darkTheme.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="550.0" spacing="20.0" styleClass="glass-pane">
         <children>
            <StackPane>
               <children>
                  <Label styleClass="header-label" text="Verify Email" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="30.0" right="30.0" top="30.0" />
               </VBox.margin>
            </StackPane>
            <StackPane>
               <children>
                  <Label fx:id="emailedYouLabel" alignment="CENTER" maxWidth="Infinity" prefWidth="350" styleClass="sub-header-label" text="Enter the code sent to your email." textAlignment="CENTER" wrapText="true" />
